<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- MixtureTheme -->
    <style name="MixtureTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MixtureActionBarStyle</item>
    </style>
    
    <style name="MixtureActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/accent_bottom_border</item>
    </style>
    
    
    
    
    <!-- android-menudrawer -->
    <style name="Widget" />

    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
       	<item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
    </style>
    
    
    <!-- Main menu -->
    <style name="main_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/main_menu_text</item>
        <item name="android:background">@drawable/main_menu_background_selector</item>
    </style>
    
    

    
    <!-- common styles -->
    <style name="common_wrap_content_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="common_match_parent_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="common_width_parent_height_content_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="common_width_content_height_parent_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="common_vertical_linear_layout" parent="common_match_parent_layout">
        <item name="android:orientation">vertical</item>
    </style>
    
    
    
    
    <!-- admob -->
    <style name="admob">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    
    
    <!-- dialog -->
    <style name="dialog_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dip</item>
    </style>
    
    <style name="dialog_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#555</item>
    </style>
    
    <style name="dialog_text_bold" parent="dialog_text">
        <item name="android:textStyle">bold</item>
    </style>
    
    
    
    
    <!-- NotFoundScanAppActivity -->
    <style name="not_found_scan_app_text" parent="common_wrap_content_layout">
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableTop">@drawable/not_found_scan_app_icon</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="not_found_scan_app_button" parent="common_wrap_content_layout">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    
    
    
    <!-- ScanResultActivity -->
    <!-- 素材アイコンや名称を表示するRelativeLayout -->
    <style name="scan_result_relative_layout" parent="common_width_parent_height_content_layout">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <!-- 素材アイコン -->
    <style name="scan_result_material_icon">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <!-- 素材名称、素材クラス用リニアレイアウト -->
    <style name="scan_result_material_linear_layout" parent="common_width_parent_height_content_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <!-- 素材クラステキストビュー -->
    <style name="scan_result_material_class_text_view" parent="common_wrap_content_layout">
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <!-- 素材名称テキストビュー -->
    <style name="scan_result_material_name_text_view" parent="scan_result_material_class_text_view">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 素材information/descriptionヘッダー -->
    <style name="scan_result_material_header" parent="common_width_parent_height_content_layout">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/accent_bottom_border</item>
    </style>
    
    
    
    
    <!-- フッターのボタン -->
    <style name="scan_result_action_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>



    <!-- item/material detail scroll view -->
    <style name="item_detail_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fillViewport">true</item>
    </style>



    <!--fragment_result_scan -->

</resources>
