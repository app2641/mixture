<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- MixtureTheme -->
    <style name="MixtureTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MixtureActionBarStyle</item>
    </style>
    
    <style name="MixtureActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/accent_bottom_border</item>
    </style>
    
    
    
    
    <!-- android-menudrawer -->
    <style name="Widget" />

    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
       	<item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
    </style>
    
    
    <!-- Main menu -->
    <style name="main_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/main_menu_text</item>
        <item name="android:background">@drawable/main_menu_background_selector</item>
    </style>
    
    

    
    <!-- common styles -->
    <style name="common_wrap_content_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="common_match_parent_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="common_vertical_linear_layout" parent="common_match_parent_layout">
        <item name="android:orientation">vertical</item>
    </style>
    
    
    
    
    <!-- admob -->
    <style name="admob">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    
    
    <!-- dialog -->
    <style name="dialog_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dip</item>
    </style>
    
    <style name="dialog_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#555</item>
    </style>
    
    <style name="dialog_text_bold" parent="dialog_text">
        <item name="android:textStyle">bold</item>
    </style>
    
    
    
    
    <!-- NotFoundScanAppActivity -->
    <style name="not_found_scan_app_text" parent="common_wrap_content_layout">
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableTop">@drawable/not_found_scan_app_icon</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <style name="not_found_scan_app_button" parent="common_wrap_content_layout">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>



    <!-- item/material detail scroll view -->
    <style name="item_detail_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fillViewport">true</item>
    </style>



    <!--fragment_result_scan -->

</resources>
