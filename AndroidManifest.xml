<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app2641.mixture"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <!-- Permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MixtureTheme" >
        
        <!-- MainActivity -->
        <activity
            android:name="com.app2641.mixture.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <!-- NotFoundScanAppActivity -->
        <activity
            android:name="com.app2641.activity.NotFoundScanAppActivity"
            android:label="@string/activity_not_found_scan_app_title"
            android:screenOrientation="portrait" />
        
        
        <!-- ScanResultActivity -->
        <activity 
            android:name="com.app2641.activity.ScanResultActivity"
            android:label="@string/activity_scan_result_title"
            android:screenOrientation="portrait"/>
        
        
        <!-- ShakeActivity -->
        <activity
            android:name="com.app2641.activity.MixinShakeActivity"
            android:label="@string/activity_mixin_shake_title"
            android:screenOrientation="portrait" />
                
        
        <!-- AdMobActivity -->
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" >
        </activity>
    </application>

</manifest>